<form action="/todos/edit/{{{edit.id}}}?_method=PUT" method="POST">
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <div class="input-group-text">
        <input type="checkbox" name="done" {{#if edit.done }} checked{{/if}} />
      </div>
    </div>
    <input type="text" placeholder="name" name="name" value="{{{edit.name}}}" class="form-control">
    <div class="input-group-append">
      <button type="submit" class="btn btn-success">Edit</button>
    </div>
  </div>
</form>